<%-  include('header', {title: 'Snippets: Edit Entry'}); -%>
  <body>
    <nav>
      <input type="checkbox" id="check" />
      <label for="check" class="checkbtn">
        <i class="fas fa-bars"></i>
      </label>
      <img class="nav-logo" src="/logo-line.svg" />
      <ul>
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/blog/<%= cookiesInfo[0] %>">My Blog</a></li>
        <li><a href="/entry">Create New Entry</a></li>
        <li><form action="/logout?_method=DELETE" method="POST">
          <input type="submit" value="Log Out"/>
        </form>
      </ul>
    </nav>
    <div class="editentry-body">
      <div class="para-1">
        <h1>Edit Entry</h1>
      </div>
        <div class="form">
    <form class="editentry-form" id="editentry-form" action="/entry/<%= data.id %>/?_method=PUT" method="POST">
      <div class="form-group">
        <label for="title" class="form-label">Title</label><br/>
        <input type="text" id="title" name="title" value="<%= data.title %>" required/>
      </div>
      <div class="form-group">
        <label for="content" class="form-label">Content</label><br/>
        <textarea type="text" form="editentry-form" id="content" name="content" rows="10" cols="70" required><%= data.content %></textarea>
      </div>
      <input type="submit" value="Edit Entry"/>
    </form>
    </div>
  </body>
</html>
